<% for(var i=tweets.length-1; i>=0; i--) { %>
	<br>
	<div class="round-box tweet">
		<% if(username === tweets[i].author) { %>
			<button class="x-button" type="button">X</button>
		<% } %>
		<i>
			<a href="/users/<%= tweets[i].author %>">@<%= tweets[i].author %></a>
			<% if(tweets[i].retweet_from === undefined) { %>
				posted:
			<% } else { %>
				refreeted from <a href="/users/<%= tweets[i].retweet_from %>">@<%= tweets[i].retweet_from %></a>:
			<% } %>
		</i>
		<br><br>
		<%= tweets[i].text %>
		<br>
		<% if(tweets[i].author !== username) { %>
			<button class="retweet-button" type="button">Refreet!</button>&nbsp;&nbsp;
		<% } %>
		<%= tweets[i].likes.length %>
			<% if(tweets[i].likes.length === 1) { %> person <% } else { %> people <% } %>
		liked this freet.
		<% if(tweets[i].likes.indexOf(username) === -1) { %>
			<b class="like">&hearts;</b> Like
		<% } else { %>
			<b class="unlike">&hearts;</b> Unlike
		<% } %>
		<input type="hidden" name="author" value="<%= tweets[i].author %>" />
		<input type="hidden" name="text" value="<%= tweets[i].text %>" />
		<input type="hidden" name="id" value="<%= tweets[i].id %>" />
	</div>
<% } %>
